    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "NPM Start (Dev)",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "dev"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "NPM Start (Prod)",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "preLaunchTask": {
                "type": "npm",
                "script": "build"
            },
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "start"
            ]
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Node: Attach Nodemon",
            "processId": "${command:PickProcess}",
            "restart": true
        }
    ]
}
