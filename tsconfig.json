{
    "compilerOptions": {
        "moduleResolution": "NodeNext",
        "module": "NodeNext",
        "target": "ESNext",
        "sourceMap": true,
        "outDir": "./dist",
        "strict": true,
        "pretty": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "baseUrl": ".",
        "skipLibCheck": true,
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "noImplicitOverride": true,
        "noImplicitThis": true,
        "strictBindCallApply": true,
        "strictNullChecks": true,
        "paths": {
            "@app/*": [
                "./src/app/*"
            ],
            "@core/*": [
                "./src/core/*"
            ],
        },
        "plugins": [
            {
                "transform": "typescript-transform-paths",
                "exclude": [
                    "**/node_modules/**"
                ]
            },
            {
                "transform": "typescript-transform-paths",
                "exclude": [
                    "**/node_modules/**"
                ],
                "afterDeclarations": true
            }
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
